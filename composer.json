{
	"name": "dereuromark/cakephp-data",
	"type": "cakephp-plugin",
	"description": "A CakePHP plugin containing lots of useful and reusable data containers",
	"keywords": [
		"cakephp",
		"plugin",
		"data",
		"geo"
	],
	"homepage": "https://github.com/dereuromark/cakephp-data",
	"license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"homepage": "https://www.dereuromark.de",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": ">=7.4",
		"cakephp/cakephp": "^4.2.0",
		"dereuromark/cakephp-tools": "^2.0.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"cakephp/migrations": "^3.0.0",
		"dereuromark/cakephp-geo": "^2.0.0",
		"willdurand/geocoder": "^4.2.2",
		"friendsofcake/search": "^6.0.0",
		"yangqi/htmldom": "dev-master",
		"fig-r/psr2r-sniffer": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Data\\": "src/",
			"Data\\Test\\Fixture\\": "tests/Fixture/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Data\\Test\\": "tests/",
			"TestApp\\": "tests/test_app/src/"
		}
	},
	"support": {
		"source": "https://github.com/dereuromark/cakephp-data"
	},
	"prefer-stable": true,
	"scripts": {
		"test": "phpunit",
		"test-coverage": "phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"stan": "phpstan analyse",
		"stan-tests": "phpstan analyse -c tests/phpstan.neon",
		"stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.0.0 && mv composer.backup composer.json",
		"cs-check": "phpcs -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --ignore=/config/Migrations/,/tests/test_files/ --extensions=php src/ tests/ config/",
		"cs-fix": "phpcbf -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --ignore=/config/Migrations/,/tests/test_files/ --extensions=php src/ tests/ config/"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
